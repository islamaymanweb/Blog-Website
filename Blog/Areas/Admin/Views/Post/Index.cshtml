@model IEnumerable<Post>

@{
    var title = "Post";
}
<div class="d-flex" id="wrapper">
    <partial name="_AdminNavbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            <a class="btn btn-warning float-right" asp-area="Admin" asp-controller="Post" asp-action="Edit">Add-Post</a>
        </nav>
        <div class="container-fluid">
            <div class="text-center mt-3">
                <h2>@title</h2>
                <hr />
            </div>
            <div class="table-responsive p-2">
                <table id="mypost" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Body</th>
                            <th>Image</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Tags</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Body)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Image)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => blog.Tags)
                                </td>
                              
                                <td>
                                    <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
</div>
@section scripts {
    <script src="~/js/post.js"></script>
    <script src="~/js/menutoggle.js"></script>
}